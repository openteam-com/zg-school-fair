<div class='proposals_form_wrapper'>
  <h3 class='header'>Анкета-заявка на участие в открытом конкурсе</h3>
  <%= simple_form_for @proposal, html: {class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>
    <%= f.input :title %>
    <%= f.input :category %>
    <%= f.input :phone, input_html: { size: 50 }%>
    <%= f.input :participant_type %>
    <%= f.input :space %>

    <div class='form-group'>
      <div class='col-sm-9 col-sm-offset-3'>
        <%= f.submit 'Отправить заявку', class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>
